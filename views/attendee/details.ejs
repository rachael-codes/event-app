<!-- views/attendee/details.ejs -->

<!DOCTYPE html>
<html>
<head>
  <title>Attendee Details</title>
  <!-- Include Bootstrap CSS or your preferred styling -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1>Attendee Details</h1>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Name: <%= attendee.name %></h5>
        <p class="card-text">Email: <%= attendee.email %></p>
        <!-- Add more details here as needed -->
        <a href="/attendees" class="btn btn-primary">Back to Attendees</a>
      </div>
    </div>
  </div>

  <!-- Include Bootstrap JS and jQuery (Optional) -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
